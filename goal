(:goal 
    (forall (?book - book ?subject - subject ?size - size ?bin - bin ) 
        (exists (?location - location) 
            (imply 
                (and (Book_Subject ?book ?subject) (Bin_Subject ?bin ?subject) (Bin_Size ?bin ?size) (Book_Size ?book ?size))
                (and (Bin_At ?bin ?location) (Book_At ?book ?location) )
            )
        )
    )
)

(:goal 
    (forall (?book - book  ) 
        (exists (?subject - subject ?size - size ?bin - bin) 
            (imply 
                (and (Book_Subject ?book ?subject) (Bin_Subject ?bin ?subject) (Bin_Size ?bin ?size) (Book_Size ?book ?size))
                (exists(?location - location) (and (Bin_At ?bin ?location) (Book_At ?book ?location) ) )
            )
        )
    )
)
